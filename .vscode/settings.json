{
  "git.autofetch": true,
  "files.insertFinalNewline": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.prettier": true
  },
  "editor.linkedEditing": true,
  "editor.suggest.preview": true,
  "editor.bracketPairColorization.enabled": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.component.ts": "${capture}.component.html, ${capture}.component.css, ${capture}.component.spec.ts",
    "package.json": "package-lock.json, yarn.lock",
    ".eslintrc*": ".eslintignore",
    ".prettierrc*": ".prettierignore",
    ".stylelintrc*": ".stylelintignore",
    "environment.ts": "environment.*.ts",
    "tsconfig.json": "tsconfig.*.json"
  },
  "javascript.preferences.quoteStyle": "double",
  "javascript.referencesCodeLens.enabled": true,
  "typescript.preferences.quoteStyle": "double",
  "typescript.referencesCodeLens.enabled": true,
  "eslint.packageManager": "npm",
  "eslint.validate": ["javascript", "typescript", "html"],
  "[html][javascript][typescript][json][jsonc][css][scss][markdown][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "scss.scannerExclude": ["**/.git", "**/bower_components"],
  "stylelint.validate": ["css", "scss", "postcss"]
}
